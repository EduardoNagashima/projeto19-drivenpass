// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  credentials Credential[]
  Notes       Note[]

  @@map("users")
}

model Credential {
  id       Int    @id @default(autoincrement())
  name     String
  url      String
  username String
  password String
  author   User   @relation(fields: [userId], references: [id])
  userId   Int

  @@map("credentials")
}

model Note {
  id         Int    @id @default(autoincrement())
  tittle     String
  annotation String
  author     User   @relation(fields: [userId], references: [id])
  userId     Int

  @@map("notes")
}
